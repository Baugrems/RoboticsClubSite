<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Team</p>
            <div class="list-group">
                <li class="list-group-item active">Main Meeting Times</li>
                <li class="list-group-item"><%= team.meeting1 %></li>
                <li class="list-group-item"><%= team.meeting2 %></li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= team.image %>">
                <div class="caption">
                    <h4 class="pull-right">Leader: <%= team.leader %></h4>
                    <h4><a><%=team.name%></a></h4>
                    <p>
                        <%= team.description %>
                    </p>
                        <a class="btn btn-warning" href="/teams/<%= team._id %>/edit">Edit Team</a>
                        <form id="delete-form" action="/teams/<%= team._id%>/?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete This Team</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>