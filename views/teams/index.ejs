<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Robotics Club Teams</h1>
            <p>View our great teams and up to date information about them.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/teams/new">Add new Team</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% teams.forEach(function(team){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= team.image %>">
                <div class="caption">
                    <h4><%= team.name %></h4>
                </div>
                <p>
                    <a href="/teams/<%= team._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }) %>
    </div>
</div>
<%- include('../partials/footer') %>